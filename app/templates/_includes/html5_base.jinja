<head>
    <script>!function(h){h.className=h.className.replace(/\bno-js\b/,'js')}(document.documentElement)</script>
    <meta charset="utf-8">
    <title>Ayden&#39;s Law{% block title %}{% endblock %}</title>
    <link rel="icon" href="/static/img/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/static/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/static/css/main.css">
</head>
<body{% block body_attr %}{% endblock %}>
    {% include '_includes/google-analytics.jinja' %}
    {% with messages = get_flashed_messages() %}
    <ul id="flash">
        {% for msg in messages %}
        <li class="err">{{ msg }}</li>
        {% endfor %}
    </ul>
    {% endwith %}
    <div id="header">
        <h1><a href="/" title="Ayden&#39;s Law home">{% block header_title %}{% endblock %}</a></h1>
        <a id="bb" target="_blank" class="logo" href="http://www.beatbullying.org/">BeatBullying</a>
        <a id="sun" target="_blank" class="logo" href="http://www.thesun.co.uk/">The Sun</a>
    </div>
    <a id="contact" href="mailto:pressoffice@beatbullying.org?subject=Ayden&#39;s+Law">Contact us</a>
    {% block content %}{% endblock %}
    <div id="footer">
        <div class="details">
            <p>
                BeatBullying is part of The BB Group<br>
                The BeatBullying Group is registered charity number 1097631<br>
                Company registered in England and Wales, no. 03807909
            </p>
        </div>
    </div>
    <script src="/static/js/jquery-1.8.3.min.js"></script>
    <script src="/static/js/tabs.js"></script>
</body>
</html>
